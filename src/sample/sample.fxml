                        <Insets bottom="8.0" top="8.0" />
                     </VBox.margin></Button>
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding></VBox>
            <VBox layoutX="295.0" layoutY="175.0" prefHeight="230.0" prefWidth="119.0" style="-fx-background-color: #d5b8ff;">
