               <children>
                  <Label text="Toppings" />
                  <ListView fx:id="toppingsList" prefHeight="191.0" prefWidth="31.0" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding></VBox>
