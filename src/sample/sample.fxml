               <children>
                  <Button fx:id="addToppingButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="112.0" text="Add Topping">
                     <VBox.margin>
                        <Insets bottom="8.0" top="8.0" />
                     </VBox.margin></Button>
                  <Button fx:id="removeToppingButton" mnemonicParsing="false" prefWidth="120.0" text="Remove Topping">
