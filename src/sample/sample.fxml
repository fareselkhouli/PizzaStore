                  <Label text="Selected Toppings" />
                  <ListView fx:id="selectedToppingBox" prefHeight="191.0" prefWidth="31.0" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </VBox>
            <VBox layoutX="427.0" layoutY="175.0" prefHeight="230.0" prefWidth="119.0" style="-fx-background-color: #d5b8ff;">
               <children>
                  <Button fx:id="addToOrderButton" mnemonicParsing="false" text="Add to Order">
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin></Button>
                  <Button fx:id="showOrderButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="87.0" text="Show Order">
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin></Button>
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </VBox>
            <TextArea fx:id="outputArea" layoutX="22.0" layoutY="416.0" prefHeight="112.0" prefWidth="525.0" />
         </children></Pane>
   </children>
</GridPane>
